@page "{id:int}"
@model Events.RazorWebApp.Pages.EventPage.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>Event Details</h4>
    <hr />
    <div style="padding: 10px 0">
        <img src="@Model.Event.ImageLink" alt="Event Image" width="300px" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.OpenTicket)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.OpenTicket)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.CloseTicket)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.CloseTicket)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.TicketPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.TicketPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.OperatorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.OperatorName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Event.EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
