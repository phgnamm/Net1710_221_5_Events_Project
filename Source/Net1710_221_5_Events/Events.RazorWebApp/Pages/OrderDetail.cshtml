@model Events.RazorWebApp.Pages.OrderDetailModel
@{
    ViewData["Title"] = "Order Details";
    var orderDetails = Model.OrderDetails;
    var message = Model.Message;
}

<div class="text-center">
    <h1 class="display-6">Order Detail Management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<form method="post" asp-page-handler="Search">
    <div class="row mb-3">
        <div class="col-md-2">
            <label for="nameEvent">Event Name:</label>
            <select id="nameEvent" name="nameEvent" class="form-control">
                <option value="">-- Select --</option>
                @{
                    var uniqueeventName = new HashSet<string>();
                    foreach (var ev in Model.Events)
                    {
                        if (!string.IsNullOrEmpty(ev.Name))
                        {
                            uniqueeventName.Add(ev.Name);
                        }
                    }

                    foreach (var eventName in uniqueeventName)
                    {
                        <option value="@eventName">@eventName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <label for="paymentMethod">Payment Method:</label>
            <select id="paymentMethod" name="paymentMethod" class="form-control">
                <option value="">-- Select --</option>
                @{
                    var uniquePaymentMethods = new HashSet<string>();
                    foreach (var order in Model.Orders)
                    {
                        if (!string.IsNullOrEmpty(order.PaymentMethod))
                        {
                            uniquePaymentMethods.Add(order.PaymentMethod);
                        }
                    }

                    foreach (var paymentMethod in uniquePaymentMethods)
                    {
                        <option value="@paymentMethod">@paymentMethod</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="startDate">Event Start Date:</label>
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary mt-4">Search</button>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Event Name</th>
                    <th class="card-title text-center">Event Location</th>
                    <th class="card-title text-center">Payment Method</th>
                    <th class="card-title text-center">Operator Name</th>
                    <th class="card-title text-center">Quantity</th>
                    <th class="card-title text-center">Price</th>
                    <th class="card-title text-center">Event Start Date</th>
                    <th class="card-title text-center">Event End Date</th>
                    <th class="card-title text-center">Order Code</th>
                    <th class="card-title text-center">Payment Status</th>
                    <th class="card-title text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="tblOrderDetailList">
                @if (orderDetails.Count > 0)
                {
                    foreach (var orderDetail in orderDetails)
                    {
                        <tr>
                            <td class="text-center">@orderDetail.Event?.Name</td>
                            <td class="text-center">@orderDetail.Event?.Location</td>
                            <td class="text-center">@orderDetail.Order?.PaymentMethod</td>
                            <td class="text-center">@orderDetail.Event?.OperatorName</td>
                            <td class="text-center">@orderDetail.Quantity</td>
                            <td class="text-center">@orderDetail.Price</td>
                            <td class="text-center">@orderDetail.Event?.StartDate</td>
                            <td class="text-center">@orderDetail.Event?.EndDate</td>
                            <td class="text-center">@orderDetail.Order?.Code</td>
                            <td class="text-center">@orderDetail.Order?.PaymentStatus</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-warning me-2" onclick="openEditModal('@orderDetail.OrderDetailId', '@orderDetail.Quantity', '@orderDetail.Price', '@orderDetail.OrderId', '@orderDetail.EventId')">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@orderDetail.OrderDetailId" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                        <button type="submit" class="btn btn-danger me-2">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-info me-2" onclick="openDetailModal('@orderDetail.Order.Code','@orderDetail.Order.Description','@orderDetail.Order.TicketQuantity','@orderDetail.Order.TotalAmount','@orderDetail.Order.PaymentStatus','@orderDetail.Order.PaymentDate','@orderDetail.Order.PaymentMethod')">
                                        <i class="fas fa-info-circle"></i> Detail
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center">No order details available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex > 1 ? "" : "disabled")">
            <a class="page-link" asp-page-handler="Search" asp-route-pageIndex="@(Model.PageIndex - 1)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-page-handler="Search" asp-route-pageIndex="@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.PageIndex < Model.TotalPages ? "" : "disabled")">
            <a class="page-link" asp-page-handler="Search" asp-route-pageIndex="@(Model.PageIndex + 1)" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

<!-- Add Order Detail Modal -->
<div class="modal fade" id="orderDetailModal" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/OrderDetail">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="orderDetailModalLabel">Order Detail Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="quantity">Quantity</label>
                            <input asp-for="OrderDetail.Quantity" class="form-control" required min="1" />
                        </div>
                        <div class="col-md-6">
                            <label for="price">Price</label>
                            <input asp-for="OrderDetail.Price" class="form-control" required min="1" />
                        </div>
                        <div class="col-md-6">
                            <label for="event">Events</label>
                            <select asp-for="OrderDetail.EventId" id="event" class="form-control" required>
                                <option value="">-- Select --</option>
                                @foreach (var item in Model.Events)
                                {
                                    <option value="@item.EventId">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="orderCode">Order Code</label>
                            <select asp-for="OrderDetail.OrderId" id="orderCode" class="form-control" required>
                                <option value="">-- Select --</option>
                                @foreach (var item in Model.Orders)
                                {
                                    <option value="@item.OrderId">@item.Code</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*-------------------DetailOrder---------------------*@
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="orderDetailModalLabel">Order Detail Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="orderDetailModalContent"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="oCode">Code</label>
                            <input id="oCode" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oDescription">Description</label>
                            <input id="oDescription" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oTicket">Ticket Quantity</label>
                            <input id="oTicket" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oTotal">Total Amount</label>
                            <input id="oTotal" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oPS">Payment Status</label>
                            <input id="oPS" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oPD">Payment Date</label>
                            <input id="oPD" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="oPM">Payment Method</label>
                            <input id="oPM" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@*-------------------EDIT---------------------------*@
<div class="modal fade" id="editOrderDetailModal" tabindex="-1" aria-labelledby="editOrderDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editOrderDetailModalLabel">Edit Order Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="editQuantity">Quantity</label>
                            <input asp-for="OrderDetail.Quantity" id="editQuantity" class="form-control" required min="1"/>
                        </div>
                        <div class="col-md-6">
                            <label for="editPrice">Price</label>
                            <input asp-for="OrderDetail.Price" id="editPrice" class="form-control" required min="1" />
                        </div>
                        <div class="col-md-6">
                            <label for="editEvent">Events</label>
                            <select asp-for="OrderDetail.EventId" id="editEvent" class="form-control" required>
                                @foreach (var item in Model.Events)
                                {
                                    <option value="@item.EventId">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <input asp-for="OrderDetail.OrderDetailId" type="hidden" id="idOrderDetail" class="form-control" />
                <input asp-for="OrderDetail.OrderId" type="hidden" id="idOrder" class="form-control" />
                <div class="modal-footer">
                    <button id="editBtSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#orderDetailModal').modal('show');
        }

        function openEditModal(orderDetailId, quantity, price, orderID, eventID) {
            $('#editOrderDetailModal').modal('show');

            // Update modal fields with data from the row
            $('#editQuantity').val(quantity);
            $('#editPrice').val(price);
            $('#idOrderDetail').val(orderDetailId);
            $('#idOrder').val(orderID);
            $('#editEvent').val(eventID);
        }

        function openDetailModal(code, descrip, ticket, total, status, date, method) {
            $('#detailModal').modal('show');

            // Update modal fields with data from the row
            $('#oCode').val(code);
            $('#oDescription').val(descrip);
            $('#oTicket').val(ticket);
            $('#oTotal').val(total);
            $('#oPS').val(status);
            $('#oPD').val(date);
            $('#oPM').val(method);
        }

        $(document).ready(function () {
            var message = '@message';
            if (message) {
                alert(message);
            }

            // Validate Quantity and Price
            $('form').on('submit', function (e) {
                var quantity = parseFloat($(this).find('input[name="OrderDetail.Quantity"]').val());
                var price = parseFloat($(this).find('input[name="OrderDetail.Price"]').val());

                if (quantity <= 0) {
                    alert('Quantity must be greater than 0');
                    e.preventDefault();
                }

                if (price <= 0) {
                    alert('Price must be greater than 0');
                    e.preventDefault();
                }
            });
        });
    </script>
}


